#define BUFSIZE (128 * 1024)

int rpos; char rbuf[BUFSIZE];
static inline void initRead() {
    rpos = BUFSIZE - 1;
}

static inline char readChar() {
    if( !(rpos = (rpos + 1) & (BUFSIZE - 1)) )
        fread(rbuf, 1, BUFSIZE, fin);
    return rbuf[rpos];
}

int readInt() {
    int ch, number = 0;
    while( !isdigit( ch = readChar() ) );
    do
        number = number * 10 + ch - '0';
    while( isdigit( ch = readChar() ) );

    return number;
}
